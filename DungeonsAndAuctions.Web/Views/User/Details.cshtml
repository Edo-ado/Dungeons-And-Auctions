@model D_A.Application.DTOs.UsersDTO

@{
    ViewData["Title"] = "Expediente del Sujeto";
}

<div class="min-h-screen bg-[#1a1412] py-12 px-4 font-['Cinzel'] text-stone-300">

    <div class="max-w-4xl mx-auto bg-[#2a1f1a] border-2 border-yellow-800 shadow-[0_0_50px_rgba(0,0,0,0.9)] rounded-lg overflow-hidden">

        <div class="bg-[#3d2b24] border-b-2 border-yellow-700 p-8 text-center relative">
        
            <h2 class="text-sm tracking-[0.3em] text-yellow-600 uppercase mb-2">Información del Ciudadano</h2>
            <h1 class="text-5xl font-bold text-red-600 drop-shadow-md">@Model.FirstName @Model.LastName</h1>
            <p class="text-yellow-500 italic mt-2">"@Model.UserName" — ID: #@Model.Id</p>
        </div>

        <div class="p-8 grid grid-cols-1 md:grid-cols-3 gap-8">

            <div class="md:col-span-2 space-y-6">
                <section>
                    <h3 class="text-xl text-yellow-600 border-b border-yellow-900 mb-4 pb-1 uppercase tracking-widest">Biografía y Origen</h3>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <span class="block text-xs text-stone-500 uppercase">Reino / País</span>
                            <span class="text-lg text-stone-200">@Html.DisplayFor(model => model.CountryName)</span>
                        </div>
                        <div>
                            <span class="block text-xs text-stone-500 uppercase">Linaje / Género</span>
                            <span class="text-lg text-stone-200">@Html.DisplayFor(model => model.GenderName)</span>
                        </div>
                        <div class="sm:col-span-2">
                            <span class="block text-xs text-stone-500 uppercase">Historia (Sobre mí)</span>
                            <p class="text-stone-400 italic bg-[#1f1612] p-3 rounded border border-yellow-900/30">
                                "@(string.IsNullOrEmpty(Model.AboutMe) ? "Este sujeto no ha dejado registro de su historia..." : Model.AboutMe)"
                            </p>
                        </div>
                    </div>
                </section>

                <section>
                    <h3 class="text-xl text-yellow-600 border-b border-yellow-900 mb-4 pb-1 uppercase tracking-widest">Contacto de Mensajería</h3>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <span class="block text-xs text-stone-500 uppercase">Cuervo Electrónico</span>
                            <span class="text-stone-200">@Html.DisplayFor(model => model.Email)</span>
                        </div>
                        <div>
                            <span class="block text-xs text-stone-500 uppercase">Señal de Humo (Tel)</span>
                            <span class="text-stone-200">@Html.DisplayFor(model => model.PhoneNumber)</span>
                        </div>
                    </div>
                </section>
            </div>

            <div class="bg-[#1f1612] p-6 rounded-lg border border-yellow-900 shadow-inner">
                <div class="text-center mb-6">
                    <span class="block text-xs text-yellow-700 uppercase mb-2">Rango en la Corte</span>
                    <span class="text-2xl font-bold text-red-500 uppercase tracking-tighter">@Model.RoleName</span>
                </div>

                <div class="space-y-4">
                    <div class="flex justify-between items-center border-b border-yellow-900/50 pb-2">
                        <span class="text-sm">Estado:</span>
                        @if (Model.Active)
                        {
                            <span class="text-green-500 font-bold uppercase text-xs tracking-widest">Con Vida</span>
                        }
                        else
                        {
                            <span class="text-red-700 font-bold uppercase text-xs tracking-widest">En el Muro</span>
                        }
                    </div>

                    <div class="flex justify-between items-center border-b border-yellow-900/50 pb-2">
                        <span class="text-sm text-stone-500">Restricciones:</span>
                        <span class="@(Model.IsBlocked ? "text-red-600" : "text-stone-400") font-bold text-xs uppercase">
                            @(Model.IsBlocked ? "Mazmorras" : "Ninguna")
                        </span>
                    </div>

                    @if (ViewBag.ShowPujas == true)
                    {
                        <div class="mt-8 text-center p-3 bg-yellow-900/20 border border-yellow-700/50 rounded">
                            <span class="text-3xl block font-bold text-yellow-500">@ViewBag.TotalBids</span>
                            <span class="text-[10px] uppercase text-yellow-700">Pujas Realizadas</span>
                        </div>
                    }

                    @if (ViewBag.ShowAuction == true)
                    {
                        <div class="mt-4 text-center p-3 bg-red-900/20 border border-red-700/50 rounded">
                            <span class="text-3xl block font-bold text-red-500">@ViewBag.TotalAuctions</span>
                            <span class="text-[10px] uppercase text-red-700">Subastas Creadas</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="bg-[#1a1412] p-6 flex justify-between items-center border-t border-yellow-800">
            <a asp-action="Index" class="text-stone-500 hover:text-yellow-600 transition-colors uppercase text-sm tracking-widest">
                ← Volver al Concilio
            </a>
            <div class="flex gap-4">
                <a asp-action="Edit" asp-route-id="@Model.Id"
                   class="bg-yellow-700 hover:bg-yellow-600 text-white px-8 py-2 rounded-sm border border-yellow-500 transition-all uppercase font-bold tracking-tighter">
                    Editar Perfil
                </a>
            </div>
        </div>
    </div>
</div>