@model D_A.Application.DTOs.AuctionsDTO

@{
    ViewData["Title"] = "Detalle de Subasta";
}

<div class="max-w-5xl mx-auto px-6 py-10">
    @if (Model == null)
    {
        <div class="text-center text-red-600">No se encontró la subasta.</div>
    }
    else
    {
        <div class="mb-6">
            <h1 class="text-2xl font-semibold text-gray-800">Detalle de la subasta</h1>
            <p class="text-sm text-gray-500 mt-1">Id: @Model.Id</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- INFORMACIÓN DEL OBJETO -->
            <section class="md:col-span-1 bg-white rounded-lg shadow p-6 border">
                <h2 class="text-lg font-medium text-gray-700 mb-4">Información del objeto</h2>

                <div class="mb-4">
                    <h3 class="text-xl font-semibold text-gray-800">@Model.IdobjectNavigation?.Name</h3>
                    <p class="text-sm text-gray-500">Registrado por: @Model.IdusercreatorNavigation?.UserName</p>
                </div>

                <div class="mb-4">
                    @if (Model.IdobjectNavigation?.IdimageNavigation?.ImageData != null && Model.IdobjectNavigation.IdimageNavigation.ImageData.Length > 0)
                    {
                        <img class="w-full h-48 object-cover rounded-md border" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.IdobjectNavigation.IdimageNavigation.ImageData)" alt="Imagen de @Model.IdobjectNavigation?.Name" />
                    }
                    else
                    {
                        <div class="w-full h-48 flex items-center justify-center bg-gray-50 rounded-md border text-gray-400">
                            Sin imagen
                        </div>
                    }
                </div>

                <dl class="space-y-3 text-sm text-gray-700">
                    <div>
                        <dt class="font-medium">Categoría(s)</dt>
                        <dd class="mt-1">
                            @if (Model.IdobjectNavigation?.Category != null && Model.IdobjectNavigation.Category.Any())
                            {
                                <div class="flex flex-wrap gap-2">
                                    @foreach (var c in Model.IdobjectNavigation.Category)
                                    {
                                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-indigo-100 text-indigo-800">@c.Name</span>
                                    }
                                </div>
                            }
                            else
                            {
                                <span class="text-gray-400">Sin categorías</span>
                            }
                        </dd>
                    </div>

                    <div>
                        <dt class="font-medium">Condición</dt>
                        <dd class="mt-1">@Model.IdobjectNavigation?.IdQualityNavigation?.Quality?.ToString() </dd>
                    </div>

                    <div>
                        <dt class="font-medium">Año</dt>
                        <dd class="mt-1">@Model.IdobjectNavigation?.Year?.ToString()</dd>
                    </div>

                    <div>
                        <dt class="font-medium">Descripción</dt>
                        <dd class="mt-1 text-gray-600">@Model.IdobjectNavigation?.Description ??</dd>
                    </div>

                    <div>
                        <dt class="font-medium">Precio de mercado</dt>
                        <dd class="mt-1">@((Model.IdobjectNavigation?.MarketPrice.HasValue ?? false) ? Model.IdobjectNavigation.MarketPrice.Value.ToString("C") : "No hay registros")</dd>
                    </div>
                </dl>
            </section>

            <!-- DATOS DE LA SUBASTA -->
            <section class="md:col-span-2 bg-white rounded-lg shadow p-6 border">
                <div class="flex items-start justify-between">
                    <h2 class="text-lg font-medium text-gray-700">Datos completos de la subasta</h2>
                    <div>
                        @if (Model.IsActive)
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">Activa</span>
                        }
                        else
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-700">Inactiva</span>
                        }
                    </div>
                </div>

                <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm text-gray-700">
                    <div>
                        <dt class="font-medium">Fecha de inicio</dt>
                        <dd class="mt-1">@Model.StartDate.ToString("yyyy-MM-dd")</dd>
                    </div>

                    <div>
                        <dt class="font-medium">Fecha de cierre</dt>
                        <dd class="mt-1">@Model.EndDate.ToString("yyyy-MM-dd")</dd>
                    </div>

                    <div>
                        <dt class="font-medium">Precio base</dt>
                        <dd class="mt-1">@Model.BasePrice.ToString("C")</dd>
                    </div>

                    <div>
                        <dt class="font-medium">Incremento mínimo</dt>
                        <dd class="mt-1">@Model.IncrementoMinimo.ToString("C")</dd>
                    </div>

                    <div>
                        <dt class="font-medium">Cantidad total de pujas</dt>
                        <dd class="mt-1 font-semibold">@Model.TotalBids</dd>
                    </div>

                  

                    <div>
                        <dt class="font-medium">Creador </dt>
                        <dd class="mt-1">@Model.IdusercreatorNavigation.FirstName @Model.IdusercreatorNavigation.LastName </dd>
                    </div>

                    <div class="sm:col-span-2">
                        <dt class="font-medium">Detalles adicionales</dt>
                        <dd class="mt-1 text-gray-600">
                            @* Muestra si hay historial de pujas *@
                            @if (Model.BidHistory != null && Model.BidHistory.Any())
                            {
                                <div class="mt-2">
                                    <table class="w-full text-sm">
                                        <thead>
                                            <tr class="text-left text-xs text-gray-500">
                                                <th class="pb-2">Fecha</th>
                                                <th class="pb-2">Usuario</th>
                                                <th class="pb-2">Monto</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var bh in Model.BidHistory.OrderByDescending(b => b.BidDate).Take(10))
                                            {
                                                <tr class="border-t">
                                                    <td class="py-2">@bh.BidDate.ToString("yyyy-MM-dd HH:mm")</td>
                                                    <td class="py-2">@bh.User.UserName ?? bh.UserId.ToString()</td>
                                                    <td class="py-2">@bh.Amount.ToString("C")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <span class="text-gray-400">No hay pujas registradas.</span>
                            }
                        </dd>
                    </div>
                </div>

                <div class="mt-6 flex items-center justify-between">
                    <div class="text-sm text-gray-500">Última actualización: @DateTime.Now.ToString("yyyy-MM-dd HH:mm")</div>
                    <div class="flex gap-3">
                        <a asp-action="Index" class="inline-block px-4 py-2 bg-gray-100 text-gray-800 rounded hover:bg-gray-200">Volver</a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="inline-block px-4 py-2 bg-yellow-100 text-yellow-800 rounded hover:bg-yellow-200">Editar</a>
                    </div>
                </div>
            </section>
        </div>
    }
</div>
