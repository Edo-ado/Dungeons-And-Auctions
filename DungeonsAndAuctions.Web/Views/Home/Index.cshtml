@{
    ViewData["Title"] = "D&A";
}

<!-- ACCESOS RÁPIDOS -->
<section class="container mb-5">
    <h2 class="h4 fw-bold mb-4 text-center">Accesos rápidos</h2>

    <div class="row g-4">

        <!-- Usuarios -->
        <div class="col-12 col-md-4">
            <a asp-controller="User" asp-action="Index" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-people fs-1 mb-3 text-primary"></i>
                        <h5 class="fw-semibold">Usuarioss</h5>
                        <p class="text-muted small">Gestiona y visualiza tus usuarios registrados.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Libros -->
        <div class="col-12 col-md-4">
            <a asp-controller="Object" asp-action="Index" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-book-half fs-1 mb-3 text-success"></i>
                        <h5 class="fw-semibold">Objectos</h5>
                        <p class="text-muted small">Consulta el catálogo de objetos disponible.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Reportes -->
        <div class="col-12 col-md-4">
            <a asp-controller="Reporte" asp-action="GraficoVentas" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-bar-chart-line fs-1 mb-3 text-danger"></i>
                        <h5 class="fw-semibold">Reportes</h5>
                        <p class="text-muted small">Visualiza estadísticas y reportes de ventas.</p>
                    </div>
                </div>
            </a>
        </div>

    </div>
</section>